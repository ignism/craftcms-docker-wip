{
  "name": "craftcms-docker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "setup": "rm -r ./server/private; composer create-project craftcms/craft ./server/private/craft",
    "serve": "docker kill $(docker ps -q); docker-compose up -d",
    "config": "cp -r ./server/private/craft/web/ ./server/public/; cp ./config/public/index.php ./server/public; cp ./config/private/craft/config/general.php ./server/private/craft/config; cp ./config/private/craft/config/project.yaml ./server/private/craft/config",
    "stop": "docker-compose down --volumes",
    "craft-install": "docker-compose exec web ./private/craft/craft install --username=admin --password=password --email=anonymous@mail.com --site-name=Branding --site-url=localhost:8080 --language=en-GB",
    "craft-rebuild": "docker-compose exec web ./private/craft/craft project-config/rebuild",
    "watch": "webpack --config webpack.dev.js --watch",
    "dev": "webpack --config webpack.dev.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@barba/core": "^2.3.9",
    "@barba/css": "^2.1.8",
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "animejs": "^3.0.1",
    "autoprefixer": "^9.3.1",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.5",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^1.0.1",
    "cssnano": "^4.1.7",
    "file-loader": "^3.0.1",
    "lodash": "^4.17.11",
    "mini-css-extract-plugin": "^0.4.4",
    "object-fit-images": "^3.2.4",
    "picturefill": "^3.0.3",
    "postcss-advanced-variables": "^3.0.0",
    "postcss-easings": "^2.0.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-mixins": "^6.2.1",
    "postcss-nested": "^4.1.2",
    "postcss-object-fit-images": "^1.1.2",
